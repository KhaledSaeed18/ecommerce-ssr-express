<div class="card">
    <div class="card-header">
        <h1 class="card-title">Welcome to SSR Store</h1>
        <p class="card-description">This is a store built with server-side rendering.</p>
    </div>

    <div class="card-content">
        <% if (isAuthenticated) { %>
            <div class="space-y-md">
                <p>You are logged in as: <strong>
                        <%= user.email %>
                    </strong></p>
                <p>Role: <span class="badge badge-primary">
                        <%= userRole %>
                    </span></p>
            </div>
            <% } else { %>
                <div class="space-y-md">
                    <h2>Get Started</h2>
                    <p>Please <a href="/auth/login">login</a> or <a href="/auth/register">register</a> to continue.</p>
                </div>
                <% } %>
    </div>

    <% if (isAuthenticated) { %>
        <div class="card-footer">
            <div class="flex gap-md flex-wrap">
                <form action="/auth/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary">Logout (This Device)</button>
                </form>
                <form action="/auth/logout-all" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger">Logout (All Devices)</button>
                </form>
            </div>
        </div>
        <% } %>
</div>