<!-- Hero Section -->
<section class="hero">
    <!-- Animated Background Elements -->
    <div class="hero-bg-decoration">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="floating-shape shape-4"></div>
    </div>

    <div class="hero-content">
        <h1 class="hero-title">
            <span class="hero-title-main">Welcome to</span>
            <span class="hero-title-brand">SSR Store</span>
        </h1>
        <p class="hero-description">Discover amazing products with authentic quality and timeless style. Experience
            shopping reimagined.</p>
        <div class="hero-actions">
            <% if (!isAuthenticated) { %>
                <a href="/auth/register" class="btn btn-hero btn-hero-primary">
                    <i data-lucide="user-plus"></i>
                    <span>Join Us Today</span>
                </a>
                <a href="/products" class="btn btn-hero btn-hero-secondary">
                    <i data-lucide="shopping-bag"></i>
                    <span>Browse Products</span>
                </a>
                <% } else { %>
                    <% if (userRole !=='admin' ) { %>
                        <a href="/products" class="btn btn-hero btn-hero-primary">
                            <i data-lucide="shopping-bag"></i>
                            <span>Shop Now</span>
                        </a>
                        <% } %>
                            <a href="<%= userRole === 'admin' ? '/admin/dashboard' : '/dashboard' %>"
                                class="btn btn-hero btn-hero-secondary">
                                <i data-lucide="layout-dashboard"></i>
                                <span>Dashboard</span>
                            </a>
                            <% } %>
        </div>

        <!-- Hero Stats -->
        <div class="hero-stats">
            <div class="hero-stat">
                <div class="hero-stat-value">5000+</div>
                <div class="hero-stat-label">Happy Customers</div>
            </div>
            <div class="hero-stat">
                <div class="hero-stat-value">100%</div>
                <div class="hero-stat-label">Quality Assured</div>
            </div>
            <div class="hero-stat">
                <div class="hero-stat-value">24/7</div>
                <div class="hero-stat-label">Support</div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <!-- Categories Section -->
    <section class="categories-section">
        <div class="section-header">
            <h2 class="section-title">Shop by Category</h2>
            <p class="section-subtitle">Explore our curated collections</p>
        </div>
        <div class="categories-grid">
            <% if (categories && categories.length> 0) { %>
                <% categories.forEach((category, index)=> { %>
                    <a href="/categories/<%= category.slug %>" class="category-card-modern">
                        <div class="category-card-icon-wrapper">
                            <i data-lucide="folder" class="category-icon-modern"></i>
                        </div>
                        <div class="category-card-content">
                            <h3 class="category-name-modern">
                                <%= category.name %>
                            </h3>
                            <p class="category-count-modern">
                                <%= category.productCount || 0 %> products
                            </p>
                        </div>
                        <div class="category-card-arrow">
                            <i data-lucide="arrow-right"></i>
                        </div>
                    </a>
                    <% }); %>
                        <% } else { %>
                            <div style="grid-column: 1 / -1; text-align: center; padding: var(--spacing-xl);">
                                <p class="text-muted">No categories available yet</p>
                            </div>
                            <% } %>
        </div>
    </section>

    <!-- Call to Action Banner -->
    <section class="cta-banner-section">
        <a href="/products" class="cta-banner-link">
            <img src="/assets/images/CTA.png" alt="Unlock Your Daily Discoveries - Shop Smarter, Live Better"
                class="cta-banner-image">
        </a>
    </section>

    <!-- Featured Products Section -->
    <section class="featured-section">
        <div class="section-header">
            <h2 class="section-title">Featured Products</h2>
            <p class="section-subtitle">Handpicked items just for you</p>
        </div>
        <div class="products-grid-modern">
            <% if (featuredProducts && featuredProducts.length> 0) { %>
                <% featuredProducts.forEach((product, index)=> { %>
                    <a href="/products/<%= product.slug %>" class="product-card-modern">
                        <div class="product-image-wrapper">
                            <% if (product.images && product.images.length> 0) { %>
                                <img src="<%= product.images[0].url %>" alt="<%= product.name %>"
                                    class="product-image-modern">
                                <% } else { %>
                                    <div class="product-image-placeholder">
                                        <i data-lucide="image" style="width: 64px; height: 64px; opacity: 0.3;"></i>
                                    </div>
                                    <% } %>
                                        <% if (product.stock> 0) { %>
                                            <div class="product-badge badge-success-modern">In Stock</div>
                                            <% } else { %>
                                                <div class="product-badge badge-danger-modern">Out of Stock</div>
                                                <% } %>
                        </div>
                        <div class="product-card-content">
                            <h3 class="product-name-modern">
                                <%= product.name %>
                            </h3>
                            <p class="product-description-modern">
                                <%= product.description %>
                            </p>
                            <div class="product-footer-modern">
                                <span class="product-price-modern">$<%= product.price.toFixed(2) %></span>
                                <span class="product-view-link">
                                    View Details
                                    <i data-lucide="arrow-right" style="width: 16px; height: 16px;"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                    <% }); %>
                        <% } else { %>
                            <div style="grid-column: 1 / -1; text-align: center; padding: var(--spacing-xl);">
                                <p class="text-muted">No featured products available yet</p>
                            </div>
                            <% } %>
        </div>
        <div style="text-align: center; margin-top: var(--spacing-xl);">
            <a href="/products" class="btn btn-primary btn-lg">
                View All Products
                <i data-lucide="arrow-right"></i>
            </a>
        </div>
    </section>
</div>

<!-- Footer -->
<footer class="footer">
    <div class="footer-content">
        <div class="footer-section">
            <img src="/assets/images/logo.png" alt="SSR Store Logo" class="footer-logo">
        </div>
        <div class="footer-section">
            <h3>Shop</h3>
            <ul>
                <li><a href="/products">All Products</a></li>
                <% if (categories && categories.length> 0) { %>
                    <% categories.slice(0, 3).forEach(category=> { %>
                        <li><a href="/categories/<%= category.slug %>">
                                <%= category.name %>
                            </a></li>
                        <% }); %>
                            <% } %>
            </ul>
        </div>
        <div class="footer-section">
            <h3>Account</h3>
            <ul>
                <% if (isAuthenticated) { %>
                    <li><a href="<%= userRole === 'admin' ? '/admin/dashboard' : '/dashboard' %>">Dashboard</a></li>
                    <li><a href="/account/security">Security</a></li>
                    <% } else { %>
                        <li><a href="/auth/login">Login</a></li>
                        <li><a href="/auth/register">Register</a></li>
                        <% } %>
            </ul>
        </div>
        <div class="footer-section">
            <h3>About</h3>
            <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </div>
    </div>
</footer>