<div class="card">
    <div class="card-header flex justify-between items-center">
        <div>
            <h1 class="card-title">Manage Categories</h1>
            <p class="card-description">Create and manage product categories</p>
        </div>
        <a href="/admin/categories/new" class="btn btn-primary">
            <i data-lucide="plus"></i>
            New Category
        </a>
    </div>

    <% if (typeof success !=='undefined' && success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
        <% } %>

            <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
                <% } %>

                    <div class="card-content">
                        <% if (categories && categories.length> 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Slug</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach(category=> { %>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <%= category.name %>
                                                </strong>
                                            </td>
                                            <td>
                                                <%= category.slug %>
                                            </td>
                                            <td>
                                                <%= category.description ? category.description.substring(0, 50) + '...'
                                                    : '-' %>
                                            </td>
                                            <td>
                                                <% if (category.isActive) { %>
                                                    <span class="badge badge-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge badge-danger">Inactive</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <%= new Date(category.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <div class="flex gap-sm">
                                                    <a href="/admin/categories/<%= category._id %>/edit"
                                                        class="btn btn-sm btn-secondary">
                                                        <i data-lucide="edit"></i>
                                                        Edit
                                                    </a>
                                                    <form action="/admin/categories/<%= category._id %>/toggle"
                                                        method="POST" style="display: inline;">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-secondary">
                                                            <i data-lucide="toggle-left"></i>
                                                            Toggle
                                                        </button>
                                                    </form>
                                                    <form action="/admin/categories/<%= category._id %>/delete"
                                                        method="POST" style="display: inline;"
                                                        onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-danger">
                                                            <i data-lucide="trash-2"></i>
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <p class="text-muted">No categories found. Create your first category to get started.
                                </p>
                                <% } %>
                    </div>
</div>