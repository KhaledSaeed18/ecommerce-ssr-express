<div class="card">
    <div class="card-header flex justify-between items-center">
        <div>
            <h1 class="card-title">Manage Products</h1>
            <p class="card-description">Create and manage your product catalog</p>
        </div>
        <a href="/admin/products/new" class="btn btn-primary">
            <i data-lucide="plus"></i>
            New Product
        </a>
    </div>

    <% if (typeof success !=='undefined' && success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
        <% } %>

            <% if (typeof error !=='undefined' && error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
                <% } %>

                    <div class="card-content">
                        <!-- Filters -->
                        <form action="/admin/products" method="GET" class="mb-md">
                            <div class="flex gap-md items-end">
                                <div class="form-group" style="flex: 1;">
                                    <label for="search" class="form-label">Search</label>
                                    <input type="text" id="search" name="search" class="form-input"
                                        placeholder="Search products..." value="<%= searchQuery %>">
                                </div>
                                <div class="form-group" style="flex: 1;">
                                    <label for="category" class="form-label">Category</label>
                                    <select id="category" name="category" class="form-input">
                                        <option value="">All Categories</option>
                                        <% categories.forEach(cat=> { %>
                                            <option value="<%= cat._id %>" <%=currentCategory===cat._id.toString()
                                                ? 'selected' : '' %>>
                                                <%= cat.name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-secondary">
                                    <i data-lucide="search"></i>
                                    Filter
                                </button>
                                <a href="/admin/products" class="btn btn-secondary">
                                    <i data-lucide="x"></i>
                                    Clear
                                </a>
                            </div>
                        </form>

                        <!-- Products Table -->
                        <% if (products && products.length> 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% products.forEach(product=> { %>
                                        <tr>
                                            <td>
                                                <% if (product.images && product.images.length> 0) { %>
                                                    <img src="<%= product.images[0].url %>"
                                                        alt="<%= product.images[0].alt %>"
                                                        style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                                                    <% } else { %>
                                                        <div
                                                            style="width: 50px; height: 50px; background: #e0e0e0; border-radius: 4px; display: flex; align-items: center; justify-content: center;">
                                                            <i data-lucide="image"
                                                                style="width: 20px; height: 20px;"></i>
                                                        </div>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <strong>
                                                    <%= product.name %>
                                                </strong>
                                                <% if (product.isFeatured) { %>
                                                    <span class="badge badge-warning">Featured</span>
                                                    <% } %>
                                            </td>
                                            <td>
                                                <%= product.category ? product.category.name : 'N/A' %>
                                            </td>
                                            <td>
                                                $<%= product.price.toFixed(2) %>
                                                    <% if (product.comparePrice) { %>
                                                        <br>
                                                        <small class="text-muted"
                                                            style="text-decoration: line-through;">$<%=
                                                                product.comparePrice.toFixed(2) %></small>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <%= product.stock %>
                                                    <% if (product.stock===0) { %>
                                                        <br><span class="badge badge-danger">Out of Stock</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <% if (product.isActive) { %>
                                                    <span class="badge badge-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge badge-danger">Inactive</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <div class="flex gap-sm" style="flex-wrap: wrap;">
                                                    <a href="/admin/products/<%= product._id %>/edit"
                                                        class="btn btn-sm btn-secondary">
                                                        <i data-lucide="edit"></i>
                                                        Edit
                                                    </a>
                                                    <form action="/admin/products/<%= product._id %>/toggle"
                                                        method="POST" style="display: inline;">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-secondary">
                                                            <i data-lucide="toggle-left"></i>
                                                        </button>
                                                    </form>
                                                    <form action="/admin/products/<%= product._id %>/toggle-featured"
                                                        method="POST" style="display: inline;">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-secondary"
                                                            title="Toggle Featured">
                                                            <i data-lucide="star"></i>
                                                        </button>
                                                    </form>
                                                    <form action="/admin/products/<%= product._id %>/delete"
                                                        method="POST" style="display: inline;"
                                                        onsubmit="return confirm('Are you sure? This will delete all product images.');">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-danger">
                                                            <i data-lucide="trash-2"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>

                            <!-- Pagination -->
                            <% if (totalPages> 1) { %>
                                <div class="flex justify-center gap-md mt-md">
                                    <% if (page> 1) { %>
                                        <a href="?page=<%= page - 1 %><%= currentCategory ? '&category=' + currentCategory : '' %><%= searchQuery ? '&search=' + searchQuery : '' %>"
                                            class="btn btn-secondary">Previous</a>
                                        <% } %>
                                            <span class="text-muted">Page <%= page %> of <%= totalPages %></span>
                                            <% if (page < totalPages) { %>
                                                <a href="?page=<%= page + 1 %><%= currentCategory ? '&category=' + currentCategory : '' %><%= searchQuery ? '&search=' + searchQuery : '' %>"
                                                    class="btn btn-secondary">Next</a>
                                                <% } %>
                                </div>
                                <% } %>
                                    <% } else { %>
                                        <p class="text-muted">No products found. Create your first product to get
                                            started.</p>
                                        <% } %>
                    </div>
</div>