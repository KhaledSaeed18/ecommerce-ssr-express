<!-- About Hero Section -->
<section class="about-hero">
    <div class="container">
        <div class="about-hero-content">
            <h1 class="about-hero-title">Our Story</h1>
            <p class="about-hero-subtitle">Building a Better Shopping Experience Together</p>
        </div>
    </div>
</section>

<div class="container">
    <!-- Main About Content -->
    <section class="about-content-section">
        <div class="about-image-container">
            <img src="/assets/images/About.png" alt="SSR Store - Our Story" class="about-main-image">
        </div>
    </section>

    <!-- Mission & Values -->
    <section class="about-values-section">
        <h2 class="section-title">What We Stand For</h2>
        <div class="values-grid">
            <div class="value-card">
                <div class="value-icon">
                    <i data-lucide="heart"></i>
                </div>
                <h3 class="value-title">Quality First</h3>
                <p class="value-description">
                    We believe in quality, convenience, and community. Every product is carefully curated to ensure it
                    meets our high standards.
                </p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i data-lucide="users"></i>
                </div>
                <h3 class="value-title">Community Driven</h3>
                <p class="value-description">
                    Founded on the principles of making shopping joyful and effortless, we connect you with items you'll
                    love.
                </p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i data-lucide="smile"></i>
                </div>
                <h3 class="value-title">Delivered with a Smile</h3>
                <p class="value-description">
                    Our mission is to deliver happiness with every order. Thank you for being a part of our journey!
                </p>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="about-cta-section">
        <div class="about-cta-card">
            <h2 class="about-cta-title">Ready to Explore?</h2>
            <p class="about-cta-description">
                Discover our wide range of everyday essentials and unique finds, all curated just for you.
            </p>
            <div class="about-cta-actions">
                <a href="/products" class="btn btn-primary btn-lg">
                    <i data-lucide="shopping-bag"></i>
                    Browse Products
                </a>
                <% if (!isAuthenticated) { %>
                    <a href="/auth/register" class="btn btn-outline btn-lg">
                        <i data-lucide="user-plus"></i>
                        Join Our Community
                    </a>
                    <% } %>
            </div>
        </div>
    </section>
</div>

<!-- Footer -->
<footer class="footer">
    <div class="footer-content">
        <div class="footer-section">
            <img src="/assets/images/logo.png" alt="SSR Store Logo" class="footer-logo">
        </div>
        <div class="footer-section">
            <h3>Shop</h3>
            <ul>
                <li><a href="/products">All Products</a></li>
                <% if (categories && categories.length> 0) { %>
                    <% categories.slice(0, 3).forEach(category=> { %>
                        <li><a href="/categories/<%= category.slug %>">
                                <%= category.name %>
                            </a></li>
                        <% }); %>
                            <% } %>
            </ul>
        </div>
        <div class="footer-section">
            <h3>Account</h3>
            <ul>
                <% if (isAuthenticated) { %>
                    <li><a href="<%= userRole === 'admin' ? '/admin/dashboard' : '/dashboard' %>">Dashboard</a></li>
                    <li><a href="/account/security">Security</a></li>
                    <% } else { %>
                        <li><a href="/auth/login">Login</a></li>
                        <li><a href="/auth/register">Register</a></li>
                        <% } %>
            </ul>
        </div>
        <div class="footer-section">
            <h3>About</h3>
            <ul>
                <li><a href="/about">About Us</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </div>
    </div>
</footer>