<div class="container products-container">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">
                <%= currentCategory ? currentCategory.name : 'All Products' %>
            </h1>
            <% if (currentCategory && currentCategory.description) { %>
                <p class="card-description">
                    <%= currentCategory.description %>
                </p>
                <% } %>
        </div>

        <div class="card-content">
            <!-- Results Info -->
            <div class="flex justify-between items-center mb-md">
                <p class="text-muted">
                    Showing <%= products.length %> of <%= total %> products
                </p>
            </div>

            <!-- Products Grid -->
            <% if (products && products.length> 0) { %>
                <div class="products-grid">
                    <% products.forEach(product=> { %>
                        <a href="/products/<%= product.slug %>" class="card"
                            style="text-decoration: none; color: inherit; transition: transform 0.2s, box-shadow 0.2s;"
                            onmouseover="this.style.transform='translateY(-4px)'; this.style.boxShadow='0 8px 16px rgba(0,0,0,0.1)';"
                            onmouseout="this.style.transform=''; this.style.boxShadow='';">
                            <div style="position: relative;">
                                <% if (product.images && product.images.length> 0) { %>
                                    <img src="<%= product.images[0].url %>" alt="<%= product.images[0].alt %>"
                                        style="width: 100%; height: 250px; object-fit: cover; border-radius: 4px 4px 0 0;">
                                    <% } else { %>
                                        <div
                                            style="width: 100%; height: 250px; background: #e0e0e0; display: flex; align-items: center; justify-content: center; border-radius: 4px 4px 0 0;">
                                            <i data-lucide="image" style="width: 48px; height: 48px; opacity: 0.3;"></i>
                                        </div>
                                        <% } %>
                                            <% if (product.comparePrice && product.comparePrice> product.price) { %>
                                                <span class="badge badge-danger"
                                                    style="position: absolute; top: 10px; right: 10px;">
                                                    -<%= Math.round(((product.comparePrice - product.price) /
                                                        product.comparePrice) * 100) %>%
                                                </span>
                                                <% } %>
                                                    <% if (product.stock===0) { %>
                                                        <span class="badge badge-danger"
                                                            style="position: absolute; top: 10px; left: 10px;">
                                                            Out of Stock
                                                        </span>
                                                        <% } %>
                            </div>
                            <div class="card-content">
                                <h3 style="margin: 0 0 0.5rem; font-size: 1.125rem; font-weight: 600;">
                                    <%= product.name %>
                                </h3>
                                <p class="text-muted"
                                    style="margin: 0 0 0.5rem; font-size: 0.875rem; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical;">
                                    <%= product.description %>
                                </p>
                                <div class="flex items-center gap-sm">
                                    <span style="font-size: 1.25rem; font-weight: bold; color: var(--primary);">
                                        $<%= product.price.toFixed(2) %>
                                    </span>
                                    <% if (product.comparePrice) { %>
                                        <span class="text-muted"
                                            style="text-decoration: line-through; font-size: 0.875rem;">
                                            $<%= product.comparePrice.toFixed(2) %>
                                        </span>
                                        <% } %>
                                </div>
                                <% if (product.category) { %>
                                    <span class="badge badge-secondary" style="margin-top: 0.5rem;">
                                        <%= product.category.name %>
                                    </span>
                                    <% } %>
                            </div>
                        </a>
                        <% }); %>
                </div>

                <!-- Pagination -->
                <% if (totalPages> 1) { %>
                    <div class="flex justify-center gap-md pagination-controls">
                        <% if (page> 1) { %>
                            <a href="?page=<%= page - 1 %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>"
                                class="btn btn-secondary">
                                <i data-lucide="chevron-left"></i>
                                Previous
                            </a>
                            <% } %>
                                <span class="text-muted" style="display: flex; align-items: center; padding: 0 1rem;">
                                    Page <%= page %> of <%= totalPages %>
                                </span>
                                <% if (page < totalPages) { %>
                                    <a href="?page=<%= page + 1 %><%= filters.category ? '&category=' + filters.category : '' %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>"
                                        class="btn btn-secondary">
                                        Next
                                        <i data-lucide="chevron-right"></i>
                                    </a>
                                    <% } %>
                    </div>
                    <% } %>
                        <% } else { %>
                            <div style="text-align: center; padding: 3rem 1rem;">
                                <i data-lucide="package" style="width: 64px; height: 64px; opacity: 0.3;"></i>
                                <h3 style="margin-top: 1rem;">No products found</h3>
                            </div>
                            <% } %>
        </div>
    </div>
</div>